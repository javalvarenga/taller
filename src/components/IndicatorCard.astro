---
const { title, number } = Astro.props;
---

<div class="indicator-card">
  <h2 class="title">{title}</h2>
  <p class="number">{number}</p>
</div>

<style lang="scss">
  .indicator-card {
    width: 300px;
    padding: 3rem 1.3rem;
    border-radius: 15px;
    text-align: center;
    box-shadow: 3px 2px 15px gainsboro;

  }


  

  body.darkmode .indicator-card{
    box-shadow: 3px 2px 15px rgb(46, 46, 46);
  }

  .title {
    margin-bottom: 10px;
    font-size: 1.6rem;
    color: var(--secondary-200);
  }

  .number {
    font-size: 2.5rem;
    font-weight: 300;
  }
</style>
