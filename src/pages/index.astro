        <div class="radius-large space-96" style="border: 4px dashed grey;"></div>
        <div class="radius-large space-96" style="border: 4px dashed grey;"></div>
        <div class="radius-large space-96" style="border: 4px dashed grey;"></div>
        <div class="radius-large space-96" style="border: 4px dashed grey;"></div>
        <div class="radius-large space-96" style="border: 4px dashed grey;"></div>
        <div class="radius-large space-96" style="border: 4px dashed grey;"></div>
        <div class="radius-large space-96" style="border: 4px dashed grey;"></div>
        <div class="radius-large space-96" style="border: 4px dashed grey;"></div>
      </div>
    </div>
  </section>
</DefaultLayout>

<script>
  const date = new Date()
  document.querySelector('#current-time').innerHTML = `<em>${date.toDateString()}</em>`
</script>